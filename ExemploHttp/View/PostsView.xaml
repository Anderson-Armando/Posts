<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExemploHttp.View.PostsView"
             Title="PostsView">
    <VerticalStackLayout>
        <ScrollView>
            <CollectionView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            
                            <Label 
                                Text="{Binding Title}" />

                            <Label 
                                Text="{Binding Body}" />

                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            
        </ScrollView>
        
        
    </VerticalStackLayout>
</ContentPage>